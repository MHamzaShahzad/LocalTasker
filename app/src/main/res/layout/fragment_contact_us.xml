<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".communicate.FragmentContactUs">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:fillViewport="true">
    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:text="Local Tasker"
        android:textStyle="bold"
        android:textColor="#ce3232"
        android:textSize="40sp"
        android:typeface="serif" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At your service! For any query feel comfortable to contact."
        android:textSize="18sp"
        android:textColor="#A71515"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="10dp"
        android:background="@drawable/stylebottomsheet"
        android:inputType="textPersonName"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textColorHint="#ce3232"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:hint="Email"
        android:background="@drawable/stylebottomsheet"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#ce3232"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Phone"
        android:inputType="phone"
        android:layout_marginTop="15dp"
        android:background="@drawable/stylebottomsheet"
        android:textColor="#000000"
        android:textColorHint="#ce3232"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:hint="Your Message"
        android:fitsSystemWindows="true"
        android:breakStrategy="balanced"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:padding="10dp"
        android:background="@drawable/stylebottomsheet"
        android:textColor="#000000"
        android:textColorHint="#ce3232"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#A71515"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Submit"
        android:textColor="#fff"
        android:layout_marginTop="5dp"/>
    </ScrollView>

</LinearLayout>