<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFragmentBackground"
    tools:context=".user.FragmentMakeOffer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textWriteOfferMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write your message that task provider can read to make the deal confirm!"/>

            <EditText
                android:id="@+id/inputOfferMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="5dp"
                android:lines="5"
                android:gravity="top|start"
                android:layout_below="@id/textWriteOfferMsg"
                android:hint="Enter Your Offer Message..."
                />

            <Button
                android:id="@+id/btnMakeOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inputOfferMessage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Make Offer"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>